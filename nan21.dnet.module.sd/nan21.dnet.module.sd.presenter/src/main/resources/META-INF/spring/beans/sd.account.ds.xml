<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/context 
				http://www.springframework.org/schema/context/spring-context.xsd">
	
	<!-- ==================== CustomerAccount ==================== -->
	
	<bean id="CustomerAccountDsService" scope="singleton" lazy-init="true"
			class="net.nan21.dnet.core.presenter.service.ds.DefaultEntityDsService">
		<property name="modelClass" value="net.nan21.dnet.module.sd.account.ds.model.CustomerAccountDs"/>
		<property name="filterClass" value="net.nan21.dnet.module.sd.account.ds.filter.CustomerAccountDsFilter"/>
		<property name="entityClass" value="net.nan21.dnet.module.md.bp.domain.entity.BpAccount"/>
		<property name="converterClass" value="net.nan21.dnet.module.sd.account.ds.converter.CustomerAccountDsConv" />
	</bean>
	
	<bean class="net.nan21.dnet.core.presenter.model.DsDefinition" >
		<property name="name" value="CustomerAccount" />
		<property name="modelClass" value="net.nan21.dnet.module.sd.account.ds.model.CustomerAccountDs" />
	</bean>
</beans>
